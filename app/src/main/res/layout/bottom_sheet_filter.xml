<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bộ lọc tin tức"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn nguồn hoặc loại tin tức bạn muốn xem"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- Trang chủ -->
    <LinearLayout
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#FF6B6B"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trang chủ"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:background="#F0F0F0" />

    <!-- Cụm tin -->
    <LinearLayout
        android:id="@+id/btnClusters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#9C27B0"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cụm tin"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng hợp"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:background="#F0F0F0" />

    <!-- Mới nhất -->
    <LinearLayout
        android:id="@+id/btnNewest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#4CAF50"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mới nhất"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realtime"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F5F5F5" />

    <!-- Section: Nguồn tin -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NGUỒN TIN"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Báo điện tử -->
    <LinearLayout
        android:id="@+id/btnWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#2196F3"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Báo điện tử"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:background="#F0F0F0" />

    <!-- Facebook -->
    <LinearLayout
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#1877F2"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facebook"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F5F5F5" />

    <!-- Section: Cảm xúc -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CẢM XÚC"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Tích cực -->
    <LinearLayout
        android:id="@+id/btnPositive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#8BC34A"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tin tích cực"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:background="#F0F0F0" />

    <!-- Tiêu cực -->
    <LinearLayout
        android:id="@+id/btnNegative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#F44336"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tin tiêu cực"
            android:textSize="15sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative"
            android:textSize="12sp"
            android:textColor="#9E9E9E" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@android:color/white" />

</LinearLayout>
